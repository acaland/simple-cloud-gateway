{
  "name": "Job",
  "plural": "jobs",
  "base": "PersistedModel",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "jobId": {
      "type": "number",
      "id": true
    },
    "appId": {
      "type": "string",
      "required": true
    },
    "submissionDate": {
      "type": "date",
      "required": true
    },
    "inputZipURL": {
      "type": "string"
    },
    "status": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "prototype.getOutput": {
      "accepts": [],
      "returns": [
        {
          "arg": "data",
          "type": "file",
          "root": true,
          "description": "A zip file containing the output"
        },
        {
          "arg": "Content-Type",
          "type": "string",
          "http": {
            "target": "header"
          }
        },
        {
          "arg": "Content-Disposition",
          "type": "string",
          "http": {
            "target": "header"
          }
        }
      ],
      "description": "Return the output of the current job",
      "http": [
        {
          "path": "/getOutput",
          "verb": "get",
          "errorStatus": 404
        }
      ]
    },
    "prototype.output": {
      "accepts": [],
      "returns": [
        {
          "arg": "outputURL",
          "type": "string",
          "root": false,
          "description": "The URL where you can download the output zip"
        }
      ],
      "description": "Check the status and return the URL for the output",
      "http": [
        {
          "path": "/output",
          "verb": "get"
        }
      ]
    }
  }
}
